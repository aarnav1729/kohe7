---
const services = [
  {
    step: '01',
    name: 'Chicken Cheese Toastie',
    description:
      'This delicious and nutrious toastie is the perfect appetizer to start with.',
    imageUrl: '/assets/f1.jpg',  
  },
  {
    step: '02',
    name: 'Basque Cheesecake',
    description:
      'A customer favorite, this cheesecake is a just the perfect amount of burnt and creamy.',
    imageUrl: '/assets/f2.webp',  
  },
  {
    step: '03',
    name: 'Spinach Mushroom Tart',
    description:
      'This tasty tart is a combination of some spinach, mushrooms, and a touch of the finest cheese.',
    imageUrl: '/assets/f3.jpg',  
  },
];
---

<style>
  .service-image {
    width: 100%;
    height: 600px; /* Set the desired height */
    object-fit: cover; /* Ensures the image covers the area, maintaining aspect ratio */
    border-radius: 1rem; /* Match the border radius of the parent container */
  }
</style>

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Featured Food</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <img
                class="service-image"
                src={service.imageUrl}
                alt={service.name}
              />
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>