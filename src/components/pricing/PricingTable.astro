---

<section class="pricing-table">
  <div class="container">
    {Object.keys(menuItems).map(category => (
      <div class="category">
        <h3>{category}</h3>
        <ul>
          {menuItems[category].map(item => (
            <li>
              <span>{item.item}</span>
              <span>{item.price}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .pricing-table {
    padding: 1.5rem 0;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .category {
    margin-bottom: 2rem;
    text-align: center;
  }

  .category h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .category ul {
    list-style: decimal;
    padding: 0;
  }

  .category li {
    display: flex;
    justify-content: space-between;
    width: 300px;
    margin-bottom: 0.5rem;
  }

  .category span {
    font-size: 1rem;
  }
</style>